{
  "configuration": {
    "status": "WARN",
    "name": "AutomationLogConfig",
    "appenders": {
      "Console": {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "JsonLayout": {
          "complete": false,
          "compact": true,
          "eventEol": true,
          "properties": true,
          "objectMessageAsJsonObject": true
        }
      },
      "File": {
        "name": "File",
        "fileName": "target/logs/automation.log",
        "JsonLayout": {
          "complete": true,
          "compact": true,
          "eventEol": true,
          "properties": true,
          "objectMessageAsJsonObject": true
        }
      }
    },
    "loggers": {
      "root": {
        "level": "info",
        "appender-ref": [
          { "ref": "Console" },
          { "ref": "File" }
        ]
      }
    }
  }
}
